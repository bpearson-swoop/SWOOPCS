<?xml version="1.0"?>
<ruleset name="SWOOP">
    <description>The SWOOP Analytics coding standard.</description>
    <!-- Base coding standard based on PEAR -->
    <rule ref="PEAR">

        <!-- Exemptions for SWOOP Coding Standard -->
        <exclude name="Generic.PHP.DisallowShortOpenTag"/>
        <exclude name="Generic.Files.LineLength"/>
        <exclude name="Generic.Commenting.DocComment"/>
        <exclude name="Generic.NamingConventions.CamelCapsFunctionName"/>

        <exclude name="PEAR.Commenting.ClassComment"/>
        <exclude name="PEAR.Commenting.FileComment"/>
        <exclude name="PEAR.Commenting.FunctionComment"/>
        <exclude name="PEAR.Functions.FunctionCallSignature"/>
        <exclude name="PEAR.NamingConventions.ValidClassName"/>
        <exclude name="PEAR.NamingConventions.ValidFunctionName"/>
        <exclude name="PEAR.ControlStructures.MultiLineCondition"/>

        <exclude name="Squiz.Commenting.DocCommentAlignment"/>
    </rule>

    <!-- Disabling for now -->
    <rule ref="SWOOP.PHP.AllowShortOpenTagWithEcho">
        <severity>0</severity>
    </rule>

    <!-- Set errors to warnings -->
    <rule ref="Generic.Commenting">
        <type>warning</type>
    </rule>
    <rule ref="Squiz.Commenting">
        <type>warning</type>
    </rule>
    <rule ref="Generic.Files.LineLength">
        <type>warning</type>
    </rule>
    <rule ref="PEAR.WhiteSpace">
        <type>warning</type>
    </rule>
</ruleset>
